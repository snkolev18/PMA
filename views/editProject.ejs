<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
    rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="/styles/table.css" rel="stylesheet">
    <meta name="theme-color" content="#7952b3">
    <title>Document</title>
</head>
<body>

    <div class="container">
            <!-- edit form column -->
    <div class="col-lg-12 text-lg-center">
    </div>
        <div class="col-lg-8 push-lg-4 personal-info">
            <form action="/user/project/edit/" method="POST">
                <h1>Update information about this project</h1>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">New Title</label>
                    <div class="col-lg-9">
                        <input class="form-control" type="text" value="<%= project.Title %>" name="title"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">New Description</label>
                    <div class="col-lg-9">
                        <input class="form-control" type="text" value="<%= project.Description %>" name="description"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label"></label>
                    <div class="col-lg-9">
                        <input type="reset" class="btn btn-secondary" value="Cancel" />
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
                <input readonly name="id" id="id" value="<%= id %>" required type="hidden"><br>
            </form>
        </div>
        <div class="container-xl">
            <div class="table-responsive">
                <div class="table-wrapper">
                    <div class="table-title">
                        <div class="row">
                            <div class="col-sm-8"><h2 style="text-align: center;"><b>Teams</b></h2></div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>Title</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% teams.map(team => { %>
                            <tr>
                                <td><%= team.Title %></td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
            <form action="/user/project/assign" method="POST">
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Assign a team to this project</label>
                    <div class="col-lg-9">
                        <input class="form-control" type="text" value="" name="title"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label"></label>
                    <div class="col-lg-9">
                        <input type="reset" class="btn btn-secondary" value="Cancel" />
                        <button type="submit" class="btn btn-primary">Assign</button>
                        <input readonly name="projectId" id="id" value="<%= id %>" required type="hidden"><br><br>
                    </div>
                </div>
            </form>
            <form action="/user/task/create" method="POST">
                <div class="form-group row">
                    <h1>New Task for this project</h1>
                    <label class="col-lg-3 col-form-label form-control-label">Task title</label>
                    <div class="col-lg-9">
                        <input class="form-control" type="text" value="" name="title"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Task description</label>
                    <div class="col-lg-9">
                        <input class="form-control" type="text" value="" placeholder="Short description of the task and its purpose" name="description"/>
                    </div> 
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Assignee</label>
                    <div class="col-lg-9">
                        <input class="form-control" type="text" value="" placeholder="Username of the person, that you want to do this task" name="assigneeUsername"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label"></label>
                    <div class="col-lg-9">
                        <input type="reset" class="btn btn-secondary" value="Cancel" />
                        <button type="submit" class="btn btn-primary">Create task</button>
                    </div>
                </div>
                <input readonly name="projectId" id="id" value="<%= id %>" required type="hidden"><br>
            </form>
        </div>
        
        <form action="/user/project/delete" method="POST">
            <input readonly name="id" id="id" value="<%= id %>" required type="hidden"><br>
        <button type="submit" class="btn btn-primary">DELETE</button>
        </form>
        <br>
        
        <a href="/user/projects"><button class="btn btn-primary">Back</button></a>
    </div>

    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" id="popErrors">
        Launch demo modal
      </button>

      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <% errors.map(error => { %>
                    <div class="alert alert-danger" role="alert">
                       <%= error.message %>
                   </div>
               <% }) %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>
    <script>
        function popErrors() {
            document.getElementById("popErrors").click();
        }
        let tempErrors = JSON.parse("<%- JSON.stringify(errors).replace(/\"/g, '\\"') %>")
        console.log(tempErrors);
        if(tempErrors.length) { 
            popErrors();
        }
    </script>
</body>
</html>