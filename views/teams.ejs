<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link href="/styles/table.css" rel="stylesheet">
</head>
<body>
<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8"><h2 style="text-align: center;"><b>Teams</b></h2></div>
                </div>
            </div>
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Date of creation</th>
                        <th>Creator</th>
                        <th>Last modified by</i></th>
                        <th>Date of last change</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                <% teams.map(team => { %>
                    <tr>
                        <td><%= team.Id %></td>
                        <td><%= team.Title %></td>
                        <td><%= team.Description %></td>
                        <td><%= team.DateOfCreation.toString().substring(0, 24) %></td>
                        <td><%= team.Username %></td>
                        <td><%= team.LastModifiedByUsername %></td>
                        <td><%= team.DateOfLastChange.toString().substring(0, 24) %></td>
                        <td>
                            <a href="/admin/teams/edit/<%= team.Id %>" class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <a href="/admin"><button class="w-100 btn btn-lg btn-primary" type="submit">Back</button></a><br><br>
    <a href="/admin/teams/create"><button class="w-100 btn btn-lg btn-primary" type="submit">Create</button></a>
</div>   
</body>
</html>