<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
    rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href="/styles/table.css" rel="stylesheet">
    <meta name="theme-color" content="#7952b3">
    <title>Document</title>
</head>
<body>


    <div class="container">
            <!-- edit form column -->
    <div class="col-lg-12 text-lg-center">
    </div>
        <div class="col-lg-8 push-lg-4 personal-info">
            <% errors.map(error => { %>
                <div class="alert alert-danger" role="alert">
                  <%= error.message %>
                </div>
            <% }) %>
            <form action="/user/task/edit/" method="POST">
                <h1>Update information about this task</h1>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">New Title</label>
                    <div class="col-lg-9">
                        <input class="form-control" type="text" value="<%= task.Title %>" name="title"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">New Description</label>
                    <div class="col-lg-9">
                        <input class="form-control" type="text" value="<%= task.Description %>" name="description"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label"></label>
                    <div class="col-lg-9">
                        <input type="reset" class="btn btn-secondary" value="Cancel" />
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
                <div class="form-floating">
                    <select class="form-select form-select-sm" aria-label=".form-select-sm example" name="assigneeId">
                      <option selected>Assign user to this task</option>
                      <% for(user of users) { %>
                        <option value="<%= user.Id %>"><%= user.Username %></option>
                      <% } %>
                    </select>
                </div>
                <input readonly name="id" id="id" value="<%= task.Id %>" required type="hidden"><br>
            </form>
        </div>
        
        <form action="/user/task/delete" method="POST">
            <input readonly name="id" id="id" value="<%= task.Id %>" required type="hidden"><br>
        <button type="submit" class="btn btn-primary">DELETE</button>
        </form>
        <br>
        
        <a href="/user/profile"><button class="btn btn-primary">Back</button></a>
    </div>

</body>
</html>