{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    // "extends": [
    //     "airbnb-base"
    // ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "brace-style": [
            "error",
            "stroustrup"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "comma-spacing": "error",
        "comma-style": "error",
        "yoda": "error",
        "indent": [
            "error",
            "tab"
        ],
        "no-inline-comments": "error",
        "no-var": "error",
        "quotes": "error",
        "space-before-blocks": "error",
        "linebreak-style": [
            "error",
            "windows"
        ]
    }
}
